{
  "name": "Weerbericht",
  "description": "client knmi",
  "version": "1.1",
  "author": "Jan H Croonen",
  "permissions": [
    "geolocation"
  ],
  "host_permissions": [
    "https://cdn.knmi.nl/*",
    "https://weerlive.nl/api/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "images/weerbericht16.png",
    "default_title": "Weerbericht",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/weerbericht16.png",
    "48": "images/weerbericht48.png",
    "128": "images/weerbericht128.png"
  },
  "manifest_version": 3
}
